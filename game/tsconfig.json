{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		// "moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@local-schema/*": ["src/schema/*"],
			"@local-config/assets": ["src/game-assets-config.ts"],
			"@local-config/color": ["src/game-color-config.ts"],
			// "@local-game": ["src/components/scene/phaser/*"],
		}

	},
	"include": [
		"src/**/*"
	]
}